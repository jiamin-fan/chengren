@import "../index/index.wxss";/*主页样式*/
page{
  width: 750rpx;
  /* height:1000rpx; */
  /* padding-bottom: 400rpx; */
  background-color: #f5f5f5;
  font-size: 26rpx;
  color:#333;
}
.search_input{
  width:750rpx;
  height: 170rpx;
  background-color:#ffffff;
}
.search_input image{
  width:100%;
  height:100%;
}
.search
{
  display: flex;
  width: 650rpx;
  height:70rpx;
  top: 0;
  align-items: center;
  justify-content: left;
  margin:30rpx 50rpx 0 50rpx;
  padding-left:20rpx;
  background-color: #f0f1f2;
  /*background-color:#f0f1f2；*/
  border-radius: 10rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #939393;
}
.search:focus
{
  background-color: #ff0;
}
.search image
{
  margin:0 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.search input{
  width: 560rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: normal;
}
/* 排序 */
.sort{
  width: 100%;
  height: 70rpx;
  position: relative;
  display: flex;
  flex-direction:row;
  top: 100rpx;
  padding:0 50rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}
.sales{
  position: absolute;
  /* background-color: #eca7a7; */
  width: 250rpx;
}
.black{
  color:#000000;
}
.red{
  color: #ff0000;
}
.price{
  position: absolute;
  /* background-color: #f0d7a9; */
  width: 200rpx;
  left:250rpx;
  display: flex;
  flex-direction:row;
}
.price-icon{
  width: 40rpx;
  height: 60rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.up image{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 20rpx;
}

.down image{
  width:20rpx;
  height: 20rpx;
  
}

/* 内容 */
.search_main{
  width: 100%;
  /* height: 2200rpx; */
  background-color: #f0f1f2;
  display: flex;
  padding:0 0 400rpx 0;
  flex-wrap: wrap;
}
.main-list{
  width: 44%;
  height: 520rpx;
  background-color: #ffffff;
  display: flex;
  margin-left: 30rpx;
  margin-top: 20rpx;
  flex-direction:column;
  border-radius: 20rpx;
  box-shadow: 0 0 5px #c0c0c0;
}
.mains-1{
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.mains-1 image{
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  height: 100%;
}
.mains-2{
  /* height: 80rpx; */
  margin: 10rpx 10rpx 0 10rpx;
  font-size: 26rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.mains-3{
  margin: 6rpx 10rpx 0 10rpx;
  font-size: 22rpx;
  color: #939393;
}
.mains-4{
  height: 76rpx;
  display: flex;
  flex-direction:row;
  margin: 10rpx 0 0 0;
  position: relative;
  border-radius: 0 0 20rpx 20rpx;
  
  bottom: 0;
}
.mains-4-txt{
  font-size: 30rpx;
  color: #f47647;
  font-weight: bold;
  margin-left: 10rpx;
  margin-top: 25rpx;
  border-radius: 0 0 20rpx 0;
}
.mains-4-img{
  width: 80rpx;
  height: 80rpx;
  position:absolute;
  right:0;
  bottom: 0;
}
.mains-4-img image{
  width: 100%;
  height: 100%;
  border-radius: 0 0 20rpx 0;
}

/* 右下悬浮按钮 */
.button-box{
  width: 100rpx;
  height: 200rpx;
  right: 30rpx;
  bottom: 100rpx;
  position: fixed;
  z-index:999;
}
.button-1{
  width: 70rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 0 10rpx #d3d3d3;
}
.btn-img{
  width: 50rpx;
  height: 50rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
}
.btn-img image{
  width: 100%;
  height: 100%;
}

/* 空 */
.none-search
{
  width: 750rpx;
  height: 100vh;
  background-color: #f5f5f5;
  z-index: 888888;
}
.title-box
{
  display: flex;
  flex-direction: column;
  width:750rpx;
  align-items: center;
  justify-content: center;
  padding-top:250rpx;
  font-size:30rpx;
  color:#777;
  margin-bottom:50rpx;
}
.title-box image
{
  width:80rpx;
  height:80rpx;
  margin: 40rpx 0;
}