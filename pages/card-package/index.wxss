.page {
  margin-left: 10rpx;
  margin-right: 10rpx;
  }
  .swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  /* border-bottom: 2rpx solid #777; */
  }
  .tab-item {
  width: 33.3%;
  text-align: center;
  font-size: 30rpx;
  color: #777;
  }
  .swiper {
  height: 1300rpx;
  background: #f7f7f7;
  }
  .on {
  color: #f47767;
  border-bottom: 5rpx solid #f47767;
  }

  /* 以下是“未使用”页面的样式 */
  .tab1_box{
    width: 92%;
    /* height: 300rpx; */
    /* background-color: #f3c9f3; */
    margin: 30rpx auto;
  }
  .box_up{
    width: 100%;
    height: 210rpx;
    padding-top: 10rpx;
    position: relative;
    border-radius: 20rpx;
    box-shadow:0 0 8rpx #dad5d5;
  }
  .up_1{
    width: 180rpx;
    height: 150rpx;
    position: absolute;
    float: left;
    margin-left: 20rpx;
  }
  .up_1_view{
    width: 100%;
    height: 130rpx;
    margin-top: 20rpx;
    line-height: 130rpx;
    background-color: #f47767;
    text-align: center;
    /* display: flex; */
    /* padding-left: 10rpx; */
    /* justify-content: center; */
  }
  .up_1_view_first{
    color:#ffffff;
    font-size: 22rpx;
  }
  .up_1_view_second{
    color:#ffffff;
    font-size: 44rpx;
    font-weight: bold;
  }
  .up_1_text{
    font-size: 22rpx;
    display: flex;
    margin-top: 6rpx;
    color: #f47767;
    letter-spacing:2rpx;
    padding-left: 16rpx;
  }
  .up_2{
    width: 450rpx;
    height: 50rpx;
    position: absolute;
    margin-left: 220rpx;
    margin-top:20rpx;
    font-size: 30rpx;
    /* background-color: #eeedae; */
  }
  .up_3{
    width: 400rpx;
    height: 50rpx;
    position: absolute;
    margin-left: 220rpx;
    margin-top:120rpx;
    font-size: 24rpx;
    color: #8f8f8f;
    /* background-color: #aeeec9; */
  }
  .box_down{
    width: 100%;
    height: 100rpx;
    position: relative;
    border-radius: 20rpx;
    box-shadow:
        -3px 0 3px -1px #ebe5e5, 
        0 0 0 0 #ffffff, 
        0 3px 3px -1px #ebe5e5,
        3px 0 3px -1px #ebe5e5; 
    position: relative;
    border-top: 0.15rem dashed #ebe5e5; 
  }
  .box_down button{
    width: 180rpx;
    height: 60rpx;
    border-radius: 100rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    padding: 0;
    background-color:#f47767 ;
    color: #ffffff;
    position: absolute;
    right: 40rpx;
    top:15rpx;
  }

