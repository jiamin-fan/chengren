<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/star/loading.gif"></image>
  </view>
  <block wx:else>
    <image class="title" src="/images/star/title8.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <open-data type="userAvatarUrl" class="logo userinfo-avatar userimg" ></open-data>
        <image class="wave" src="/images/star/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/images/star/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <image class="smalltitle" src="/images/star/confirm-word1.png"></image>
        <view class="confirm-btn">
          <button open-type="getUserInfo"  bindtap='goToIndex'>登录白酒商场</button>
        </view>
      </view>
    </view>
  </block>
</view>