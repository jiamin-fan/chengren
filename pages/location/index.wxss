page{
  background-color: #eee;
  margin-bottom: 400rpx;
}
.box1{
  width: 750rpx;
  height: 94rpx;
  padding-top: 20rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 99;
}
.box1_one{
  width: 710rpx;
  height: 80rpx;
  margin-left: 20rpx;
  background-color: #eee;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}
.box1_one_left{
  width: 180rpx;
  height: 44rpx;
  margin-top: 16rpx;
  text-align: center;
  line-height: 44rpx;
  border-right: 1px solid rgb(192, 192, 192);
}
.box1_one_right{
  width: 690rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.search_input{
  width:750rpx;
  height: 170rpx;
}
.search_input image{
  width:100%;
  height:100%;
}
.search{
  display: flex;
  width: 500rpx;
  height: 60rpx;
  align-items: center;
  justify-content: left;
  line-height: 60rpx;
  color: #939393;
  padding-left: 20rpx;
}
.search:focus{
  background-color: #ff0;
}
.search image{
  width: 36rpx;
  height: 30rpx;
}
.search input{
  width: 560rpx;
  margin-left: 20rpx;
  color: #000;
  font-weight: normal;
}
