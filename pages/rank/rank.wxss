/* pages/rank/rank.wxss */
.container {
  width: 100%;
  height: auto;
  background-color: #000000;
  display: flex;
  flex-direction: column;
}

.container .header {
  width: 100%;
  height: 260rpx;
  background-image: url(https://e41.oss-cn-beijing.aliyuncs.com/chengren_miniAPP/banner.png);
  background-size: 100% 100%;
}

.rankList {
  flex: 1;
  margin-bottom: 140rpx;
}

.rankList .rankItem {
  width: 90%;
  height: 260rpx;
  margin: 20rpx auto;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx rgb(163, 161, 161);
  /* border:10rpx solid gold */
  display: flex;
  position: relative;
}

.rankItem .itemImg {
  width: 32%;
  height: 100%;
}

.itemImg image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.itemDetail {
  flex: 1;
  margin: auto 20rpx;
}

.itemDetail .content {
  font-size: 32rpx;
  line-height: 40rpx;
}

.itemDetail .price {
  font-size: 36rpx;
  font-weight: bold;
  color: red;
  margin-top: 20rpx;
}

.price .price-icon {
  font-size: 28rpx;
}

.itemDetail .rankNum {
  width: 100rpx;
  height: 100rpx;
  color: #ffffff;
  font-size: 40rpx;
  position: absolute;
  top: -20rpx;
  left: -20rpx;
}

.rankNum image {
  width: 100%;
  height: 100%;
}

.rankNum text {
  color: orangered;
  line-height: 60rpx;
  font-size: 60rpx;
  margin-left: 20rpx;

}

.itemDetail .carIcon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;
}

.carIcon image {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 20rpx;
}

.tab {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab .tabItem {
  color: #ffffff;
  margin: auto 20rpx;
  font-size: 32rpx;
  line-height: 60rpx;

}

.active {
  border-bottom: 4rpx solid orangered;
}
/* 悬浮按钮 */
.button-box{
  width: 100rpx;
  height: 200rpx;
  right: 30rpx;
  bottom: 170rpx;
  position: fixed;
  z-index:999;
}
.button-1{
  width: 70rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 0 10rpx #d3d3d3;
}
.btn-img{
  width: 50rpx;
  height: 50rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
}
.btn-img image{
  width: 100%;
  height: 100%;
}