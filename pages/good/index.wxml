<view class="detail-nav" wx:if="{{ isLogin }}">
  <button class="button-2" style="margin-left: 20rpx;" bindtap="addIndex">
    <image src="{{isLike?'../../images/icon/index.png':'../../images/icon/index.png'}}" />
