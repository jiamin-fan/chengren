/*轮播图*/
.search
{
  position: absolute;
  display: flex;
  width: 650rpx;
  height:60rpx;
  top: 0;
  align-items: center;
  justify-content: left;
  margin:30rpx 50rpx;
  padding-left:20rpx;
  background-color: rgba(255,255,255,0.8);
  /*background-color:#f0f1f2；*/
  border-radius: 10rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #939393;
}
.search:focus
{
  background-color: #ff0;
}
.search image
{
  margin:0 10rpx;
  width: 30rpx;
  height: 30rpx;
}
/*搜索框*/
.icon{
  width:710rpx;padding:22rpx 20rpx 0rpx 20rpx;
  margin: 40rpx 0;
  background-color: #fff;
}
.icon .icon_box{
  display: inline-block;
  vertical-align: middle;
  width:122rpx;
  height:150rpx;
  margin:0 10rpx;
}
.icon .icon_box image{
  width: 102rpx;
  height: 102rpx;
  margin:0 10rpx;
  border-radius: 102rpx;
  background-color: rgb(187, 184, 183);
}
.icon .icon_box text{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 11rpx 0;
}
/*小图标分类*/


.tit
{
  display: flex;
  flex-direction: row;
  width: 750rpx;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  height: 40rpx;
  background-color: #fff;
  padding:20rpx 0;
  margin:  40rpx 0 0 0;
}
.tit view:first-child,.tit view:last-child
{
  width: 24rpx;
  height: 24rpx;
  border-radius: 24rpx;
  background-color: red;
}
.tit view
{
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
  background-color: #0ff;
  margin:0 5rpx;
}
.tit text{
  width:150rpx;
  text-align: center
}
/*标题*/
.gd_boxs{
  width:650rpx;
  padding:0rpx 50rpx 0rpx 50rpx;
  height:auto;
  background-color: #fff;
}
.goods{
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  box-sizing:content-box;
  width:650rpx;
  height:auto;
  background-color: #fff
}
.goods .gd_box{
  display:flex;
  flex-direction:column;
  width:300rpx;
  height:420rpx;
  background-color:#f9f9f9;
  overflow:hidden;
  margin-bottom:24rpx;
}
.gd_box image{
  width:300rpx;
  height:300rpx;
}
.gd_box text{
  width: 300rpx;
  font-size: 28rpx;
  text-overflow:ellipsis;
  white-space: pre-wrap;
  display: -webkit-box;
  /* height:80rpx; */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.gd_box text:last-child {
    height:40rpx;
    color:rgb(253, 82, 2);
}
