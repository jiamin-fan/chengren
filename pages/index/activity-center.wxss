/* pages/index/activity-center.wxss */
page{
  background-color: #f1f2f3;
}
.center_box1{
  width: 760rpx;
  height: 760rpx;
  /* margin-top: 20rpx; */
}
.box1_img{
  width: 760rpx;
  height: 760rpx;
  /* border-radius: 50rpx; */
}
.box1_img image{
  width: 100%;
  height: 100%;
  /* border-radius: 50rpx; */
}
.center_box2{
  width: 760rpx;
  margin-top: 50rpx;
  padding-bottom: 290rpx;
  /* background-color: #8d2727; */
}
.box2_coupon{
  width: 700rpx;
  height: 170rpx;
  /* background-color: #ffffff; */
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
}
.coupon_left{
  width: 210rpx;
  height: 170rpx;
  background-color: #f0e3e2;
  border-radius: 14rpx 24rpx 24rpx 14rpx;
  position: relative;
}
.left_1{
  width: 150rpx;
  height: 80rpx;
  position: absolute;
  margin: 20rpx auto;
  margin-left: 20rpx;
  line-height: 100rpx;
  color:#f47767;
  text-align: center;
  /* display: flex; */
}
.left_1_first{
  font-size: 22rpx;
}
.left_1_second{
  font-size: 46rpx;
  font-weight: bold;
  text-align: center;
}
.left_1_text{
  width: 100%;
  font-size: 22rpx;
  color: #f47767;
  margin: 104rpx auto;
  letter-spacing:2rpx;
  /* background-color: #7b8578; */
  text-align: center;
  position: absolute;
}
.coupon_right{
  width: 488rpx;
  height: 170rpx;
  background-color: #f0e3e2;
  border-radius: 24rpx 14rpx 14rpx 24rpx;
  display: flex;
  flex-direction: row;
  /* border-left: 2rpx dashed #ff5500; */
}
.right_1{
  width: 290rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
  border-left: 1rpx dashed #ff5500;
  color: #f47767;
  /* background-color: #7cc0e0; */
}
.right_1_first{
  font-size: 34rpx;
  display: block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.right_1_second{
  font-size: 22rpx;
  margin-top: 6rpx;
}
.right_2{
  width: 160rpx;
  height: 80rpx;
  margin-top: 50rpx;
}
.before-button{
  width: 160rpx;
  height: 70rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  color: #ffffff;
  border:1rpx solid #f47767;
  background-color: #f47767;
  letter-spacing: 6rpx;
}
.after-button{
  width: 160rpx;
  height: 70rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  color: #f47767;
  border:1rpx solid #f47767;
  background-color: #f0e3e2;
}
/* 右下角悬浮按钮 */
.button-box{
  width: 100rpx;
  height: 200rpx;
  right: 30rpx;
  bottom: 100rpx;
  position: fixed;
  z-index:999;
}
.button-1{
  width: 70rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 0 10rpx #d3d3d3;
}
.btn-img{
  width: 50rpx;
  height: 50rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
}
.btn-img image{
  width: 100%;
  height: 100%;
}
