/* 商品样式 */
.dai{
  width: 670rpx;
  border-radius: 20rpx;
  /* background-color: #fabdbd; */
  margin:0 auto;
}
.good-order
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* width: 670rpx; */
  height: 250rpx;
  padding: 20rpx 30rpx 0 20rpx;
  border-radius: 20rpx;
  border:1rpx solid #f0f0f0;
  margin-top: 20rpx;
  /* margin-bottom:40rpx; */
  font-size: 26rpx;
  color:#333;
  background-color: #ffffff;
}
.good-order:last-child
{
  margin-bottom:0rpx;
}
.good-order image
{
  width: 120rpx;
  height: 120rpx;
  background-color: #f9f9f9;
}
.good-order  .order-tit
{
  width: 340rpx;
  height:80rpx;
  line-height: 40rpx;
  text-overflow:ellipsis;
  white-space: pre-wrap;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
  /* background-color: #9696cf; */
}
.good-order .good-pr
{
  display: flex;
  flex-direction: column;
  text-align: right;
  /* background-color: #00ffff; */
}
