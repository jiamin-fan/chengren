<!--pages/evaluation/add.wxml-->
<view class="add_box">
  <view class="add_box1" style="margin-bottom:0;" data-id="{{res.order_id}}">
    <image src="{{res.goods_image}}"></image>
    <text class='order-tit'>{{res.goods_name}}</text>
    <view class='good-pr'>
      <text style="color:#f37769;">￥{{res.goods_price}}</text>
      <text style="color:#777777;">x{{res.total_num}}</text>
    </view>
  </view>
  
  <view class="add_box3">
    <textarea class="box3_textarea" placeholder='快来发表评论呀~' bindinput='contentInp' value='{{contentInp}}' focus='{{focus}}'></textarea>
  </view>
</view>

  <view class="add_box5">
    <button bindtap="add_content">发表评价</button>
  </view>