page{
  width: 750rpx;
  height: 2000rpx;
  background-color: #f5f5f5;
  padding-bottom:1rpx;
}
.search_input{
  width:750rpx;
  height: 110rpx;
  background-color:#ffffff;
}
.search_input image{
  width:100%;
  height:100%;
}
.search
{
  display: flex;
  width: 650rpx;
  height:60rpx;
  top: 0;
  align-items: center;
  justify-content: left;
  margin:30rpx 50rpx;
  padding-left:20rpx;
  background-color: #f0f1f2;
  border-radius: 10rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #939393;
}
.search:focus
{
  background-color: #ff0;
}
.search image
{
  margin:0 10rpx;
  width: 30rpx;
  height: 30rpx;
}

/* 内容 */
.search_main{
  width: 100%;
  /* height: 2200rpx; */
  background-color: #ffffff;
  display: flex;
  padding:0 0 400rpx 0;
  flex-wrap: wrap;
}
.main-list{
  width: 44%;
  height: 498rpx;
  background-color: #ffffff;
  display: flex;
  margin-left: 30rpx;
  margin-top: 20rpx;
  flex-direction:column;
  border-radius: 6rpx;
  box-shadow: 0 0 2px #c0c0c0;
}
.mains-1{
  width: 100%;
  height: 320rpx;
  border-radius: 6rpx 6rpx 0 0;
}
.mains-1 image{
  border-radius: 6rpx 6rpx 0 0;
  width: 100%;
  height: 100%;
}
.mains-2{
  height: 80rpx;
  margin: 10rpx 10rpx 0 10rpx;
  font-size: 30rpx;
}
.mains-4{
  height: 80rpx;
  display: flex;
  flex-direction:row;
  margin: 10rpx 0 0 0;
  position: relative;
  border-radius: 0 0 6rpx 6rpx;
  bottom: 0;
}
.mains-4-txt{
  font-size: 30rpx;
  color: #f47647;
  font-weight: bold;
  margin-left: 10rpx;
  margin-top: 25rpx;
  border-radius: 0 0 6rpx 0;
}
.mains-4-img{
  width: 80rpx;
  height: 80rpx;
  position:absolute;
  right:0;
}
.mains-4-img image{
  width: 100%;
  height: 100%;
  border-radius: 0 0 6rpx 0;
}

/* 右下角悬浮按钮 */
.button-box{
  width: 100rpx;
  height: 200rpx;
  right: 30rpx;
  bottom: 28rpx;
  position: fixed;
  z-index:999;
}
.button-1{
  width: 70rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 0 10rpx #d3d3d3;
}
.btn-img{
  width: 50rpx;
  height: 50rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
}
.btn-img image{
  width: 100%;
  height: 100%;
}