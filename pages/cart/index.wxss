/*购物车*/
.car
{
  width: 750rpx;
  height: 100vh;
  background-color: #f5f5f5;
  z-index: 888888;
}
.title-box
{
  display: flex;
  flex-direction: column;
  width:750rpx;
  align-items: center;
  justify-content: center;
  padding-top:330rpx;
  font-size:28rpx;
  color:#777;
  margin-bottom:50rpx;
}
.title-box image
{
  width:80rpx;
  height:80rpx;
  margin: 40rpx 0;
}
.to-index-btn
{

  color: #fff;
  background-color: #000;
  border-radius:6px;
  width:300rpx;
  height:70rpx;
  line-height:70rpx;
  text-align:center;
  font-size:28rpx;
  margin:0 225rpx;

}
/*空购物车 ↑  */
.content{
  /* background-color: #f0f0f0; */
  padding-bottom: 200rpx;
  /* overflow: hidden; */
}
.cart{
  height: 260rpx;
  width: 100%;
  margin:15rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  /* background-color: #f0f0f0; */
}
.item{
  width: 95%;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.choose{
  height: 40rpx;
  width: 40rpx;
  margin-left: 20rpx;
}
.card{
  height: 250rpx;
  width: 90%;
  /* border: 1rpx solid #cdcdcd; */
  background-color: #ffffff;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  /* margin-left: 12rpx; */
}
.cover{
  height: 200rpx;
  width: 200rpx;
  flex-shrink:0;
  margin:10rpx;
}
.info{
  height: 210rpx;
  width: 406rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items:flex-start;
  margin: 0 10rpx;
}
.title{
  color: #444444;
  font-size: 28rpx;
  font-weight: bold;
}
.sub-info{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.price{
  color:#f37769;
  font-size: 32rpx;
  font-weight: bold;
  top: 6rpx;
}
.selector{
  display: flex;
  border: 1px solid #ccc; 
  
}
.changenum{
  width: 25rpx;
  font-weight: 900;
  margin: 0 10rpx;
  
}

.selector input{
  border-left: 1px solid #ccc;  
  border-right: 1px solid #ccc; 
}

.selector .normal{  
  width: 40rpx;
  text-align: center;
  color: black;
  margin: 0;
  padding: 0;
}  

/*禁用样式*/  
.selector .disabled{  
  color: #ccc;  
} 

.num{
  width: 50rpx;
  /* background-color: #cdcdcd; */
  text-align: center;
  font-size: 24rpx;
}

/* 删除 */
.del {
  background-color: #f47767;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 }

 .touch-move-active .item,
 .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }


.menu{
  height: 100rpx;
  width: 100%;
  /* border:1rpx solid #cdcdcd; */
  display: flex;
  /* position: fixed; */
  /* bottom:120rpx; */
  position: fixed;
  bottom: 120rpx;
  font-size: 32rpx;
  z-index:100;
  background-color: #ffff;
}
.summary{
  width: 60%;
  padding: 15rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  position: relative;
}
.pay{
  width: 40%;
  background-color: #f37769;
  color:#ffffff;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
  border-radius: 50rpx;
}
.block{
  height: 100rpx;
  margin:20rpx;
}

/*使屏幕变暗 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
 }
 /*对话框 */
 .commodity_attr_box {
  height: 600rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  border-radius: 20rpx 20rpx 0 0;
 }
